<Window x:Class="WriteFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WriteFile"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Center" Height="299" Margin="10,10,0,0" VerticalAlignment="Center" Width="497">
        <Grid>
            <TextBox x:Name="txtBox" HorizontalAlignment="Left" Height="126" TextWrapping="Wrap" VerticalAlignment="Top" Width="334" Margin="79,82,0,0"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Write what you want to save in a file" VerticalAlignment="Top" Height="30" Width="334" Margin="79,30,0,0" FontSize="20"/>
            <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Margin="184,243,0,0" Height="34" Click="btnSave_Click"/>

        </Grid>
    </StackPanel>
</Window>
